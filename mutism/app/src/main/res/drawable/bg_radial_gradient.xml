<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 전체 배경색 -->
    <item>
        <color android:color="#EDEDED"/> <!-- rgba(237, 237, 237, 0.3283) -->
    </item>

    <!-- 중앙에서 퍼지는 원형 그라디언트 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="42%"
                android:gradientRadius="127dp"
                android:startColor="#68A7EA"
                android:endColor="#EDEDED"
                android:useLevel="false" />
        </shape>
    </item>

</layer-list>
