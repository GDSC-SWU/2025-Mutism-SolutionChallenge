<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_view_round"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="35dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_no_select_noise_dialog_title"
        android:textSize="28sp"
        android:textColor="@color/color_primary_light"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_ear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ear1"/>

    <TextView
        android:id="@+id/tv_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_no_select_noise_dialog_subtext"
        android:textColor="@color/color_primary_dark"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/img_ear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:gravity="center"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_btn_select_noise"
        android:layout_width="260dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtext"
        android:backgroundTint="@color/color_primary"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/btn_no_select_noise_dialog_text"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>