<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 바깥쪽 그라디언트 테두리 역할 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#6CAEF6"
                android:centerColor="#80B4F4"
                android:endColor="#80DAE5F2" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- 안쪽 투명한 배경: 테두리를 남기기 위해 padding으로 밀어줌 -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/noise_bg" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>



